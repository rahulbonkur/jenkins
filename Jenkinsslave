pipeline {
    agent { label 'slave-1' }
    options {
        skipDefaultCheckout()
    }
    stages(test){
        stage('Install Git') {
            steps {
                sh 'sudo yum install -y git'
                sh 'git --version'
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
                sh 'pwd'
                sh 'ls -lrt'
            }
        }
stage('Deploy Python Flask App') {
    steps {
        sh '''
        # 1. Create target folder if it doesn't exist
        sudo mkdir -p /opt/python-08

        # 2. Copy python file
        sudo cp "${WORKSPACE}/python" /opt/python-08/python.py

        # 3. Copy requirements
        sudo cp "${WORKSPACE}/requirements.txt" /opt/python-08/requirements.txt

        # 4. Install dependencies (ensure pip3 is installed)
        if ! command -v pip3 &> /dev/null; then
            sudo yum install -y python3
            sudo python3 -m ensurepip
            sudo python3 -m pip install --upgrade pip
        fi
        cd /opt/python-08
        sudo pip3 install -r requirements.txt

        # 5. Ensure Flask listens on all interfaces
        sudo sed -i "s/app.run(/app.run(host='0.0.0.0', /" python.py

        # 6. Fix permissions so Jenkins can write logs
        sudo chown -R ec2-user:ec2-user /opt/python-08

        # 7. Kill any previous python.py process
        pkill -f python.py || true

        # 8. Run Flask app in background with logging
        nohup python3 python.py > app.log 2>&1 &
        '''
    }
}
    }
}
