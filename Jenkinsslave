pipeline {
    agent { label 'slave-1' }
    options {
        skipDefaultCheckout()
    }

    stages {
        stage('Install Git') {
            steps {
                sh 'sudo yum install -y git'
                sh 'git --version'
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
                sh 'pwd'
                sh 'ls -lrt'
            }
        }

        stage('Moving Python files') {
            steps {
                sh '''
                    # Ensure destination directory exists
                    sudo mkdir -p /opt/python-folder

                    # Copy all files from workspace/python to destination
                    sudo cp -r /home/ec2-user/jenkins1/workspace/python/* /opt/python-folder/

                    # Navigate to destination and run the Python script
                    cd /opt/python-folder
                    nohup python3 python > output.log 2>&1 &
                '''
            }
        }
    }
}
