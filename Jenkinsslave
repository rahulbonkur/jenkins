pipeline {
    agent { label 'slave-1' }
    options {
        skipDefaultCheckout()
    }
    stages {
        stage('Install Git') {
            steps {
                sh 'sudo yum install -y git'
                sh 'git --version'
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
                sh 'pwd'
                sh 'ls -lrt'
            }
        }
    }
}
