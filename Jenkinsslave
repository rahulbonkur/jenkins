pipeline {
    agent { label 'slave-1' }
    options {
        skipDefaultCheckout()
    }

    stages {
        stage('Install Git') {
            steps {
                sh 'sudo yum install -y git'
                sh 'git --version'
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
                sh 'pwd'
                sh 'ls -lrt'
            }
        }

        stage('Moving py file') {
            steps {
                sh '''
                    sudo mkdir -p /opt/python
                    cp /home/ec2-user/jenkins1/workspace/python /opt/python/python.py
                    cd /opt/python
                    nohup python3 python.py &
                '''
            }
        }
    }
}
