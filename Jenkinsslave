pipeline {
    agent { label 'slave-1' }
    options {
        skipDefaultCheckout()
    }
    stages(test){
        stage('Install Git') {
            steps {
                sh 'sudo yum install -y git'
                sh 'git --version'
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
                sh 'pwd'
                sh 'ls -lrt'
            }
        }
stage('coping code') {
            steps {
               // sh "sudo mkdir /opt/python-08"
                sh "sudo cp /home/ec2-user/jenkins1/workspace/python/python.py /opt/python-08/python.py"
                sh "sudo cp /home/ec2-user/jenkins1/workspace/python/requirements.txt /opt/python-08/requirements.txt"
                sh " cd /opt/python" 
                sh "nohup python3 sample.py > abc 2>&1 &"
                
            }
        }
    }
}
