pipeline {
    agent { label 'slave-1' }
    options {
        skipDefaultCheckout()
    }
    stages(test){
        stage('Install Git') {
            steps {
                sh 'sudo yum install -y git'
                sh 'git --version'
            }
        }

        stage('Checkout SCM') {
            steps {
                checkout scm
                sh 'pwd'
                sh 'ls -lrt'
            }
        }
 stage('mocing py file') {
            steps {
                sh "sudo cp /home/ec2-user/jenkins1/workspace/python/python /opt/python-folder/python.py"               
                sh "sudo cp ${WORKSPACE}/requirements.txt /opt/python-folder/requirements.txt"
                sh "cd /opt/python-folder"
                sh "nohup python3 python.py &"
            }
        }
    }
}
